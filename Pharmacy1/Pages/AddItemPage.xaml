<Page x:Class="Pharmacy1.AddItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharmacy1.Data"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddItemPage">

    <Page.Resources>
        <local:Item x:Key="item"/>

        <!-- Text Styles -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="Margin" Value="10,5,10,5"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <!-- Input Styles -->
        <Style TargetType="TextBox" x:Key="aaa">
            <Setter Property="Margin" Value="10,0,10,15"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>

        </Style>


        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

    </Page.Resources>

    <Grid Margin="20" DataContext="{StaticResource item}">

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="0" Grid.ColumnSpan="5" Background="{StaticResource PrimaryColor}" CornerRadius="3" Margin="0,0,0,20">
            <TextBlock Text="Add New Item" 
               FontSize="24" 
               Foreground="White" 
               HorizontalAlignment="Center" 
               Padding="20,10"
               FontWeight="SemiBold"/>
        </Border>

        <!-- Left Column -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Barcode" FontWeight="SemiBold"/>
        <TextBox Grid.Row="2" Grid.Column="0" x:Name="IntCode" Text="{Binding IntCode}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Name (English)" FontWeight="SemiBold"/>
        <TextBox Grid.Row="4" Grid.Column="0" x:Name="NameEn" Text="{Binding NameEn}"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Name (Arabic)" FontWeight="SemiBold"/>
        <TextBox Grid.Row="6" Grid.Column="0" x:Name="NameAr" Text="{Binding NameAr}"/>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Company Name" FontWeight="SemiBold"/>
        <ComboBox  Grid.Row="8" Grid.Column="0" x:Name="CompanyName" 
          SelectedValuePath="Id"      
          SelectedValue="{Binding CompanyId}" 
               DisplayMemberPath="NameEn"
          SelectionChanged="CompanyName_SelectionChanged">
        </ComboBox>

        <!-- Middle Column -->
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Location" FontWeight="SemiBold"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="location"/>

        <TextBlock Grid.Row="3" Grid.Column="1" Text="Price" FontWeight="SemiBold"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="Price" Text="{Binding SellPrice}"/>

        <TextBlock Grid.Row="5" Grid.Column="1" Text="Tax" FontWeight="SemiBold"/>
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="Tax" Text="{Binding Tax}"/>

        <TextBlock Grid.Row="7" Grid.Column="1" Text="Discount" FontWeight="SemiBold"/>
        <TextBox Grid.Row="8" Grid.Column="1" x:Name="Discount" Text="{Binding Discount}"/>

        <!-- Right Column-->

        <TextBlock Grid.Row="1" Grid.Column="2" Text="Unit" FontWeight="SemiBold"/>
        <ComboBox Grid.Row="2" Grid.Column="2" x:Name="Unit" 
          SelectedValuePath="Unit"      
          SelectedValue="{Binding Unit1Id}" 
          DisplayMemberPath="NameEn" SelectionChanged="Unit_SelectionChanged">

        </ComboBox>

        <!-- Submit Button -->
        <Button Grid.Row="10" Grid.ColumnSpan="5" 
        Content="Add New Item" 
        Click="Add_Click"
        HorizontalAlignment="Center"
        Width="200"
        Height="50"
        Margin="0,20"/>

    </Grid>
</Page>
