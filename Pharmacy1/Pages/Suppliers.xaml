<Page x:Class="Pharmacy1.Pages.Suppliers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pharmacy1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Suppliers"
      Background="White"  
      Loaded="Page_Loaded">

    <Page.Resources>
        <CollectionViewSource x:Key="supviewsource"/>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="123"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
    </Page.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer>
            <DataGrid  Name="dataGrid" 
                    AutoGenerateColumns="False" 
                    ItemsSource="{Binding Source={StaticResource supviewsource}}" 
                    RowDetailsVisibilityMode="VisibleWhenSelected" 
                    IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Path=Id}"/>
                    <DataGridTextColumn Header="NameAr" Binding="{Binding Path=NameAr}"/>
                    <DataGridTextColumn Header="NameEn" Binding="{Binding Path=NameEn}"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding Path=Phone}"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">

            <Button Content="Add" 
                    Click="Button_Add"/>
            <Button Content="Edit"
                    Click="Button_Edit"/>
            <Button Content="Delete"
                    Click="Button_Delete"/>

        </StackPanel>
    </Grid>
</Page>
