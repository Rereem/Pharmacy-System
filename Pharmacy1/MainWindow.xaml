<Window x:Class="Pharmacy1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy1.Data" 
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="{x:Type Button}" x:Key="{x:Static ToolBar.ButtonStyleKey}">
                <Setter Property="Padding" Value="10" />
                <Setter Property="Background" Value="Gray" />
            </Style>

        </Grid.Resources>
        <ToolBar Grid.Row="0">
            <ToolBar.Resources>
            </ToolBar.Resources>
            <Button Click="Button_Click_1">
                <StackPanel>
                    <TextBlock>Open</TextBlock>

                </StackPanel>
            </Button>
            
            <Button Click="Button_Click_2">Close</Button>
            <Button Click="Button_Click_3">Companies</Button>
            <Button Click="Button_Click_4">Items</Button>
            <Button Click="Button_Click_5">Suppliers</Button>
        </ToolBar>
        <Frame Grid.Row="1" x:Name="frame" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
