<UserControl x:Class="Pharmacy1.Data.ItemTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pharmacy1.Data" 
             mc:Ignorable="d" 
             Loaded="Window_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <CollectionViewSource x:Key="itemviewsource"/>
    </UserControl.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            
        </Grid.ColumnDefinitions>
        <StackPanel>
            <DataGrid Name="dataGrid" AutoGenerateColumns="true" 
                  ItemsSource="{Binding Source={StaticResource itemviewsource}}" RowDetailsVisibilityMode="VisibleWhenSelected" >

            </DataGrid>
        </StackPanel>
        <Button Content="Save" HorizontalAlignment="Center" Margin="0,240,0,0" 
        Click="Button_Click" Height="20" Width="123"/>
    </Grid>
</UserControl>
